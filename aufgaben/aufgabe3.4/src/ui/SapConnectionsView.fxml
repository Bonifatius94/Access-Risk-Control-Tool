<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="ui.SapConnectionsController"
      spacing="10">
    <GridPane hgap="10" vgap="10">
        <Label text="Server Hostname" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="tfServerHostname" prefWidth="200" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Server Port" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <TextField fx:id="tfServerPort" prefWidth="200" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="Encryption" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <ChoiceBox fx:id="chEncryptionType" prefWidth="200" GridPane.rowIndex="2" GridPane.columnIndex="1" />

        <Button text="Connect ..." onKeyPressed="#showLoginDlg" GridPane.rowIndex="3" GridPane.columnSpan="2" alignment="CENTER_RIGHT" />
    </GridPane>

    <TableView>
        <columns>
            <TableColumn text="Server" prefWidth="200">
                <cellValueFactory>
                    <!-- TODO: implement binding -->
                    <PropertyValueFactory property="UserID" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Username" prefWidth="200">
                <cellValueFactory>
                    <!-- TODO: implement binding -->
                    <PropertyValueFactory property="UserID" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Password" prefWidth="200">
                <cellValueFactory>
                    <!-- TODO: implement binding -->
                    <PropertyValueFactory property="Username" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn>
            </TableColumn>
            <!-- TODO: add missing columns -->
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Add ..." />
        <Button text="Delete" />
    </HBox>
</VBox>
