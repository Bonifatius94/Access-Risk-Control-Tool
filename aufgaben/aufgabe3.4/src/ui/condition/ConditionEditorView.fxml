<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="ui.condition.ConditionEditorController"
      spacing="10">
    <TableView fx:id="tblConditions">
        <columns>
            <TableColumn text="Name">
                <cellValueFactory>
                    <PropertyValueFactory property="ConditionName" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Type">
                <cellValueFactory>
                    <PropertyValueFactory property="ConditionType" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="New Auth Pattern ..." onKeyPressed="#newAuthPatternCondition" />
        <Button text="New Profile ..." onKeyPressed="#newAuthProfileCondition" />
    </HBox>
</VBox>
