<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import ui.custom.controls.PTableColumn?>
<VBox spacing="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.main.sapsettings.SapSettingsController">
    <TableView VBox.vgrow="ALWAYS" fx:id="sapConnectionTable">
        <columns>
            <PTableColumn percentageWidth="0.05" resizable="false" text="Id" fx:id="id">
                <cellValueFactory>
                    <PropertyValueFactory property="id"/>
                </cellValueFactory>
            </PTableColumn>
            <PTableColumn percentageWidth="0.35" resizable="false" text="Server" fx:id="hostnameColumn">
                <cellValueFactory>
                    <PropertyValueFactory property="serverDestination"/>
                </cellValueFactory>
            </PTableColumn>
            <PTableColumn percentageWidth="0.1" resizable="false" text="Sys Nr" fx:id="sysNr">
                <cellValueFactory>
                    <PropertyValueFactory property="sysNr"/>
                </cellValueFactory>
            </PTableColumn>
            <PTableColumn percentageWidth="0.1" resizable="false" text="JCO Client" fx:id="jcoCLient">
                <cellValueFactory>
                    <PropertyValueFactory property="client"/>
                </cellValueFactory>
            </PTableColumn>
            <PTableColumn percentageWidth="0.1" resizable="false" text="Language" fx:id="language">
                <cellValueFactory>
                    <PropertyValueFactory property="language"/>
                </cellValueFactory>
            </PTableColumn>
            <PTableColumn percentageWidth="0.1" resizable="false" text="Pool Capacity" fx:id="poolCapacity">
                <cellValueFactory>
                    <PropertyValueFactory property="poolCapacity"/>
                </cellValueFactory>
            </PTableColumn>
            <!-- TODO: additional Columns for creationDate , Author,  ???? -->
            <PTableColumn percentageWidth="0.1" resizable="false" fx:id="editConfigColumn" >
            </PTableColumn>
            <PTableColumn percentageWidth="0.1" resizable="false" fx:id="deleteConfigColumn">
            </PTableColumn>
        </columns>
    </TableView>

    <HBox alignment="BOTTOM_RIGHT" spacing="15">
        <HBox alignment="BOTTOM_LEFT" spacing="10">
            <JFXButton prefWidth="150"  prefHeight="40" text="New Sap Connection" fx:id="newSapConnectionButton" onAction="#newSapConnectionAction"/>
            <JFXButton prefWidth="150"  prefHeight="40" text="Connect" fx:id="connectButton" onAction="#connectAction"/>
        </HBox>
        <JFXButton prefWidth="100" text="Clone ..." fx:id="cloneButton" onAction="#cloneAction"/>
        <JFXButton prefWidth="100" text="Edit ..." fx:id="editButton" onAction="#editAction"/>
        <JFXButton prefWidth="100" text="Delete" fx:id="deleteButton" onAction="#deleteAction"/>
    </HBox>
</VBox>

