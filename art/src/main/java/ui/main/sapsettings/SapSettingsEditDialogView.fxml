<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import ui.custom.controls.CustomWindow?>

<CustomWindow prefHeight="400.0" prefWidth="600.0" spacing="30" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.main.sapsettings.SapSettingsEditDialogController">
    <HBox spacing="30" VBox.vgrow="ALWAYS">
        <VBox alignment="BASELINE_LEFT" spacing="20">
            <JFXTextField fx:id="hostServerField" prefWidth="300" promptText="Host Server" />
            <JFXTextField fx:id="sysNrField" prefWidth="100" promptText="System Nr." />
            <JFXComboBox fx:id="jcoClientComboBox" editable="true" prefWidth="50" promptText="JCOClient" />
            <JFXTextField fx:id="userNameField" prefWidth="150" promptText="Username" />
            <JFXPasswordField fx:id="passwordField" prefWidth="150" promptText="Password" />
        </VBox>
        <VBox spacing="20">
            <JFXButton onAction="#connect" prefHeight="75" prefWidth="100" text="Connect" />
            <JFXButton onAction="#saveConnection" prefHeight="75" prefWidth="100" text="Save Changes" />
        </VBox>
    </HBox>



</CustomWindow>
