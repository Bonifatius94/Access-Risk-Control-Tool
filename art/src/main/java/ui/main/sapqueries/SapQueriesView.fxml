<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>

<?import ui.custom.controls.PTableColumn?>
<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="ui.main.sapqueries.SapQueriesController"
      spacing="10">
    <TableView VBox.vgrow="ALWAYS" fx:id="queriesTable">
        <columns>
            <PTableColumn text="%configuration" percentageWidth="0.3">
                <cellValueFactory>
                    <PropertyValueFactory property="config" />
                </cellValueFactory>
            </PTableColumn>
            <PTableColumn text="%sapSettings" percentageWidth="0.33" fx:id="configurationColumn">
                <cellValueFactory>
                    <PropertyValueFactory property="sapConfig" />
                </cellValueFactory>
            </PTableColumn>
            <PTableColumn text="%createdAt" percentageWidth="0.2" fx:id="sapConfigurationColumn">
                <cellValueFactory>
                    <PropertyValueFactory property="createdAt" />
                </cellValueFactory>
            </PTableColumn>
            <PTableColumn percentageWidth="0.07" fx:id="editColumn" resizable="false" sortable="false">
            </PTableColumn>
            <PTableColumn percentageWidth="0.1" fx:id="deleteColumn" resizable="false" sortable="false">
            </PTableColumn>
        </columns>
    </TableView>

    <HBox alignment="BOTTOM_RIGHT" spacing="10">
        <Label fx:id="itemCount" />
        <Region HBox.hgrow="ALWAYS" />
        <JFXButton text="New..." onAction="#addAction" prefWidth="100">
            <graphic>
                <MaterialDesignIconView glyphName="PLUS"/>
            </graphic>
        </JFXButton>
        <JFXButton text="Edit..." onAction="#editAction" prefWidth="100">
            <graphic>
                <MaterialDesignIconView glyphName="PENCIL"/>
            </graphic>
        </JFXButton>
        <JFXButton text="Delete" onAction="#deleteAction" prefWidth="100" styleClass="warning-button">
            <graphic>
                <MaterialDesignIconView glyphName="DELETE"/>
            </graphic>
        </JFXButton>
    </HBox>
</VBox>
