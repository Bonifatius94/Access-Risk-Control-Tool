<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import com.jfoenix.controls.*?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ui.main.patterns.PatternsController"
      spacing="10">
    <TableView VBox.vgrow="ALWAYS" fx:id="patternsTable">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <columns>
            <TableColumn text="ID">
                <cellValueFactory>
                    <PropertyValueFactory property="id"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Description">
                <cellValueFactory>
                    <PropertyValueFactory property="description"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="# Conditions">
                <cellValueFactory>
                    <PropertyValueFactory property="conditions"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="50" fx:id="deleteColumn">
            </TableColumn>
        </columns>
    </TableView>

    <HBox alignment="BOTTOM_RIGHT" spacing="10">
        <JFXButton text="Clone ..." prefWidth="100"/>
        <JFXButton text="New ..." prefWidth="100"/>
        <JFXButton text="Edit ..." prefWidth="100"/>
        <JFXButton text="Delete" prefWidth="100"/>
    </HBox>
</VBox>
