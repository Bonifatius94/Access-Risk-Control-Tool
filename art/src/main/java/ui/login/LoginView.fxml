<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>
<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>
<?import ui.custom.controls.*?>

<CustomWindow xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="ui.login.LoginController">

    <!-- login credentials input -->
    <GridPane CustomWindow.vgrow="ALWAYS" alignment="CENTER" hgap="10" vgap="30">
        <!-- username input -->
        <HBox alignment="CENTER" spacing="10" GridPane.columnSpan="2" GridPane.rowIndex="0">
            <MaterialDesignIconView glyphName="ACCOUNT" size="20"/>
            <JFXTextField fx:id="tfLoginUsername" prefWidth="250" promptText="%username" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        </HBox>

        <!-- password input -->
        <HBox alignment="CENTER" spacing="10" GridPane.columnSpan="2" GridPane.rowIndex="1">
            <MaterialDesignIconView glyphName="KEY" size="20"/>
            <JFXPasswordField fx:id="tfLoginPassword" prefWidth="250" promptText="%password" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        </HBox>
    </GridPane>

    <!-- buttons ok / cancel -->
    <HBox alignment="BOTTOM_RIGHT" spacing="10" GridPane.columnSpan="2" GridPane.rowIndex="2">
        <padding>
            <Insets right="10" bottom="10" />
        </padding>

        <JFXButton mnemonicParsing="false" onAction="#btnOkClicked" prefWidth="80" text="%ok"/>
        <JFXButton mnemonicParsing="false" onAction="#btnCancelClicked" prefWidth="80" text="%cancel" />
    </HBox>
</CustomWindow>
