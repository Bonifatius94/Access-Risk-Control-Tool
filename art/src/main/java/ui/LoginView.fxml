<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>
<GridPane alignment="CENTER" hgap="10" vgap="30" xmlns="http://javafx.com/javafx/8.0.121"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.LoginController">
    <!-- user name input -->
    <!--<Label text="%loginLblUsername" GridPane.rowIndex="0" GridPane.columnIndex="0" />-->
    <HBox spacing="10" GridPane.columnSpan="2" GridPane.rowIndex="0">
        <MaterialDesignIconView glyphName="ACCOUNT" size="20"/>
        <JFXTextField fx:id="tfLoginUsername" prefWidth="200" promptText="%loginLblUsername" GridPane.columnIndex="1"
                      GridPane.rowIndex="0"/>
    </HBox>

    <!-- password input -->
    <!--<Label text="%loginLblPassword" GridPane.rowIndex="1" GridPane.columnIndex="0" />-->
    <HBox spacing="10" GridPane.columnSpan="2" GridPane.rowIndex="1">
        <MaterialDesignIconView glyphName="KEY" size="20"/>
        <JFXPasswordField fx:id="tfLoginPassword" prefWidth="200" promptText="%loginLblPassword"
                          GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    </HBox>

    <!-- buttons ok / cancel -->
    <HBox alignment="CENTER_RIGHT" spacing="10" GridPane.columnSpan="2" GridPane.rowIndex="4">
        <JFXButton mnemonicParsing="false" onAction="#btnOkClicked" prefWidth="80" text="%loginBtnOk"/>
        <JFXButton mnemonicParsing="false" onAction="#btnCancelClicked" prefWidth="80" text="%loginBtnCancel"/>
    </HBox>


    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>

    <!--<columnConstraints>
       <ColumnConstraints />
       <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
       <RowConstraints />
       <RowConstraints />
       <RowConstraints />
    </rowConstraints>-->
</GridPane>
